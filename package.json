{
  "name": "@sentrei/sentrei",
  "version": "1.31.0",
  "private": true,
  "description": "The Edge Serverless Backend",
  "homepage": "https://github.com/sentrei/sentrei",
  "bugs": {
    "url": "https://github.com/sentrei/sentrei/issues"
  },
  "repository": "https://github.com/sentrei/sentrei",
  "license": "MIT",
  "author": "Sentrei, Inc.",
  "workspaces": {
    "packages": [
      "apps/*",
      "components/*",
      "configurations/*",
      "e2e/*",
      "libs/*",
      "packages/*"
    ]
  },
  "scripts": {
    "affected": "nx affected",
    "affected:apps": "nx affected --target=apps --parallel",
    "affected:libs": "nx affected --target=libs --parallel",
    "affected:build": "nx affected --target=build --parallel",
    "affected:e2e": "nx affected --target=e2e --parallel",
    "affected:test": "nx affected --target=test --parallel",
    "affected:lint": "nx affected --target=lint--parallel",
    "affected:dep-graph": "nx affected:dep-graph",
    "build:app": "cross-env NODE_ENV=production nx build app --prod",
    "build:demo": "cross-env NODE_ENV=production nx build demo --prod",
    "build:home": "cross-env NODE_ENV=production nx build home --prod",
    "build:storybook": "build-storybook -o public",
    "check": "yarn run lint && yarn run depcheck:check && yarn run release:check",
    "cloud:ci": "nx-cloud start-ci-run",
    "cloud:start": "nx-cloud start-agent",
    "cloud:stop": "nx-cloud stop-all-agents",
    "depcheck:check": "yarn run depcheck:exec && yarn run depcheck:root",
    "depcheck:exec": "yarn workspaces run depcheck .",
    "depcheck:root": "depcheck . --skip-missing=true",
    "dep-graph": "nx dep-graph",
    "e2e": "nx run-many --target=e2e --all",
    "e2e:app": "nx e2e app-e2e",
    "e2e:demo": "nx e2e demo-e2e",
    "e2e:home": "nx e2e home-e2e",
    "eslint:cmd": "eslint --config .eslintrc.js --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "eslint:lint": "yarn run eslint:cmd .",
    "eslint:fix": "yarn run eslint:cmd . --fix",
    "fix": "concurrently 'yarn:*:fix'",
    "lint": "concurrently 'yarn:*:lint'",
    "multi-semantic-release": "multi-semantic-release --sequential-init",
    "multi-semantic-release:check": "multi-semantic-release --dry-run --sequential-init",
    "ncu:check": "ncu --deep -p yarn",
    "ncu:upgrade": "ncu --deep -u -p yarn",
    "npm-package-json:lint": "npmPkgJsonLint .",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier:cmd": "prettier --ignore-unknown",
    "prettier:lint": "yarn run prettier:cmd --check .",
    "prettier:fix": "yarn run prettier:cmd --write .",
    "prepare": "husky install",
    "release": "yarn run multi-semantic-release && yarn run semantic-release",
    "release:check": "yarn run multi-semantic-release:check && yarn run semantic-release:check",
    "semantic-release": "semantic-release",
    "semantic-release:check": "semantic-release --dry-run",
    "serve:app": "nx serve app",
    "serve:demo": "nx serve demo",
    "serve:home": "nx serve home",
    "storybook": "start-storybook -p 6006",
    "test": "nx test"
  },
  "resolutions": {
    "postcss": "^8.3.6"
  },
  "npmpackagejsonlint": {
    "extends": "@sentrei/npm-package-json-lint-config"
  }
}
