{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sentrei/atoms": ["components/atoms/src/index.ts"],
      "@sentrei/molecules": ["components/molecules/src/index.ts"],
      "@sentrei/organisms": ["components/organisms/src/index.ts"],
      "@sentrei/roots": ["components/roots/src/index.ts"],
      "@sentrei/screens": ["components/screens/src/index.ts"],
      "@sentrei/segment": ["packages/segment/src/index.ts"],
      "@sentrei/app/*": ["apps/app/src/*"],
      "@sentrei/blog/*": ["apps/blog/src/*"],
      "@sentrei/demo/*": ["apps/demo/src/*"],
      "@sentrei/docs/*": ["apps/docs/src/*"],
      "@sentrei/home/*": ["apps/home/src/*"],
      "@sentrei/og/*": ["apps/og/src/*"],
      "@sentrei/sentrei/*": ["apps/docs/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
