{
  "name": "@sentrei/renovate-config",
  "version": "1.0.2",
  "private": false,
  "homepage": "https://github.com/sentrei/sentrei",
  "bugs": {
    "url": "https://github.com/sentrei/sentrei/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sentrei/sentrei.git"
  },
  "license": "MIT",
  "author": "Sentrei, Inc.",
  "main": "src/index.js",
  "files": [
    "src/index.js"
  ],
  "scripts": {
    "fix": "cd ../.. && yarn run fix"
  },
  "dependencies": {
    "renovate": "^25.61.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "renovate-config": {
    "default": {
      "automerge": true,
      "automergeType": "pr",
      "rangeStrategy": "bump",
      "prConcurrentLimit": 0,
      "prHourlyLimit": 0,
      "schedule": "every 3 days",
      "extends": [
        "config:base",
        "group:monorepos"
      ]
    },
    "shunkakinoki": {
      "packageRules": [
        {
          "packagePatterns": [
            "^@shunkakinoki/"
          ]
        }
      ]
    }
  }
}
