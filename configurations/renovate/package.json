{
  "name": "@sentrei/renovate-config",
  "version": "1.4.0",
  "private": false,
  "homepage": "https://github.com/sentrei/sentrei",
  "bugs": {
    "url": "https://github.com/sentrei/sentrei/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sentrei/sentrei.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "Sentrei, Inc.",
  "main": "src/index.js",
  "files": [
    "src/index.js"
  ],
  "scripts": {
    "fix": "cd ../.. && yarn run fix"
  },
  "dependencies": {
    "renovate": "^29.28.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "renovate-config": {
    "default": {
      "automerge": true,
      "automergeType": "pr",
      "enabled": false,
      "rangeStrategy": "bump",
      "prConcurrentLimit": 0,
      "prHourlyLimit": 0,
      "schedule": "every 300 days",
      "extends": [
        "config:base",
        "group:monorepos"
      ]
    },
    "sentrei": {
      "packagePatterns": "^@sentrei/"
    },
    "remotion": {
      "sourceUrlPrefixes": "https://github.com/remotion-dev/remotion"
    }
  }
}
